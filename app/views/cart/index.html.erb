<h1>Your Cart</h1>

<% if @cart.empty? %>
    <p>Your Cart is empty.</p>
<% end %>

<% total = 0 %>

<table class="cart">
  <thead>
    <tr>
        <th scope="col" id="name">Title</th>
        <td> &nbsp </td>
        <th scope="col" id="name">Description</th>
        <th scope="col" id="name"> Quantity</th>
        <th scope="col" id="company">Price</th>
    </tr>
    </thead>
</table>
    
<table> 
     <% @cart.each do | id, quantity | %>
     <% item = Item.find_by_id(id) %>
   <tr>
    <td class= "title"><%= item.title %></td>
    <td class= "description"><%= item.description %></td>
    <td class= "image"><%= link_to (image_tag item.image_url, :style => "height:100px"), item %>
    <td class= "price"><%= number_to_currency(item.price, :unit => "€") %></td>
    <br> 
    <td class="quantity"><%= quantity %><br /></td>
    
    <td class="price"><%= number_to_currency(quantity * item.price, :unit => "€") %></td>
    <td><a href="/cart/remove/<%= item.id %>">Remove from Cart</a></td>
    </tr>
    <p><b><% total += quantity * item.price %></b></p>
    <% end %>
    
    <tr>
        <td colspan="4">
        <div class="total">Total:</div>
        </td>
        <td>
        <div class="price"><%= number_to_currency(total, :unit => "€") %></div>
        </td>
    </tr>

</table>
    
    <p>
    <%= link_to 'Continue Shopping', :controller => :items %>
    <br>

    <%= link_to 'Clear Cart', :controller => "cart", :action => "clearCart" %>
    <br>
    
    <%=link_to 'Check Out', :controller => "cart", :action => "createOrder" %>

    </p>



